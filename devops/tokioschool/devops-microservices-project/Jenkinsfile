pipeline {
    agent any 

    environment {
        DOCKER_IMAGE_A = "service-a:${env.BUILD_ID}"
        DOCKER_IMAGE_B = "service-b:${env.BUILD_ID}"
    }

    stages {
        stage('DEV - Testing') {
            steps {
                // Entra na pasta correta antes de rodar o script
                dir('devops/tokioschool/devops-microservices-project') {
                    sh '''
                    chmod +x ./run-tests.sh
                    ./run-tests.sh
                    '''
                }
            }
        }

        stage('STG - Build & Orchestrate') {
            steps {
                dir('devops/tokioschool/devops-microservices-project') {
                    script {
                        // Tenta 'docker compose', se falhar usa 'docker-compose'
                        sh 'docker compose build || docker-compose build'
                        sh 'docker compose up -d || docker-compose up -d'
                    }
                }
            }
        }

        stage('STG - Build & Orchestrate') {
            steps {
                dir('devops/tokioschool/devops-microservices-project') {
                    script {
                        // Agora o comando vai funcionar!
                        sh 'docker-compose build'
                        sh 'docker-compose up -d'
                    }
                }
            }
        }

    post {
        always {
            echo "Pipeline finalizado. Limpando workspace..."
        }
    }
}