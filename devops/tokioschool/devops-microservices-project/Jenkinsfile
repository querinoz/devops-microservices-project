pipeline {
    agent any 
    
    environment {
        DOCKER_IMAGE_A = "service-a:${env.BUILD_ID}"
        DOCKER_IMAGE_B = "service-b:${env.BUILD_ID}"
    }

    stages {
        stage('DEV - Testing') {
            // REMOVEMOS O BLOCO 'agent { docker ... }'
            // Agora roda direto no container do Jenkins onde instalamos o Python
            steps {
                sh '''
                # Garante permissão de execução
                chmod +x ./run-tests.sh
                
                # Executa o script de testes
                ./run-tests.sh
                '''
            }
        }

        stage('STG - Build & Orchestrate') {
            steps {
                script {
                    // O comando docker já está funcionando, então isso vai passar
                    sh 'docker compose build'
                    sh 'docker compose up -d'
                }
            }
        }

        stage('PRD - Deployment') {
            when {
                branch 'main'
            }
            steps {
                echo "Deploying to Production Environment..."
                sh 'docker compose up -d --force-recreate'
            }
        }
    }
    
    post {
        always {
            echo "Cleaning up workspace..."
        }
    }
}