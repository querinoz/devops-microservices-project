pipeline {
    agent any 
    
    environment {
        DOCKER_IMAGE_A = "service-a:${env.BUILD_ID}"
        DOCKER_IMAGE_B = "service-b:${env.BUILD_ID}"
    }

    stages {
        // Removido o estágio de Checkout manual, pois o Jenkins Declarative já faz isso automaticamente.

        stage('DEV - Testing') {
            agent {
                // Isso resolve o erro "python3 not found" instalando o Python dinamicamente via Docker
                docker { 
                    image 'python:3.10-slim'
                    args '-u root' 
                }
            }
            steps {
                sh '''
                # Garante que o script de testes tenha permissão
                chmod +x ./run-tests.sh
                
                # Executa o seu script que já corrigimos antes (com pip install e venv)
                ./run-tests.sh
                '''
            }
        }

        stage('STG - Build & Orchestrate') {
            steps {
                // Aqui voltamos para o agent principal para usar o Docker do host
                script {
                    sh 'docker-compose build'
                    sh 'docker-compose up -d'
                }
            }
        }

        stage('PRD - Deployment') {
            when {
                branch 'main'
            }
            steps {
                echo "Deploying to Production Environment..."
                sh 'docker-compose up -d --force-recreate'
            }
        }
    }
    
    post {
        always {
            echo "Cleaning up workspace..."
            // Opcional: Para o docker-compose para não deixar containers rodando no servidor Jenkins
            // sh 'docker-compose down'
        }
    }
}